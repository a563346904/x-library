{
  "name": "@x-library/lint",
  "version": "1.0.0",
  "description": "ESLint 配置包",
  "author": "x-library",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "eslint": "./bin/eslint.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./eslint": {
      "types": "./dist/eslint/index.d.ts",
      "import": "./dist/eslint/index.js",
      "require": "./dist/eslint/index.js"
    },
    "./prettier": {
      "types": "./dist/prettier/index.d.ts",
      "import": "./dist/prettier/index.js",
      "require": "./dist/prettier/index.js"
    }
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint:example": "eslint example-error/eslint-error-examples/**/*.{js,ts,vue} -c example-error/eslint.config.mjs --no-ignore",
    "lint:example:details": "eslint example-error/eslint-error-examples/**/*.{js,ts,vue} --no-ignore"
  },
  "dependencies": {
    "@eslint/js": "^9.23.0",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-vue": "^10.1.0",
    "globals": "^16.0.0",
    "typescript-eslint": "^8.33.1",
    "vue-eslint-parser": "^10.1.3"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.9.0",
    "@vitest/coverage-v8": "^3.2.2",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^3.2.2"
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "prettier": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": true
    },
    "prettier": {
      "optional": true
    }
  }
}
